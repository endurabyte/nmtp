<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <RootNamespace>LibMtpSharp</RootNamespace>
        <LangVersion>default</LangVersion>
        <PackageVersion>0.1.2</PackageVersion>
        <Authors>Alexandr Shevchenko</Authors>
        <Description>The wrapper of LibMtp library. Don't forget to add package with native dependencies</Description>
        <Copyright>Copyright Â©2022 Alexandr Shevchenko</Copyright>
        <PackageProjectUrl>https://github.com/shaosss/libMtpSharp</PackageProjectUrl>
        <PackageTags>MTP MTPZ</PackageTags>
        <PackageReleaseNotes>Consolidate progress callback for the existing calls
Implement retrieval of the Folder list
Throw exception for FileAndFolder list limitation
Implement file list retrieval for cached devices
Introduce nullable reference types support
Implement getting file to the path
Minor code improvements</PackageReleaseNotes>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <Nullable>enable</Nullable>
        <Title>LibMtpSharp</Title>
    </PropertyGroup>

    <ItemGroup>
      <EmbeddedResource Update="MTPZ.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>MTPZ.Designer.cs</LastGenOutput>
      </EmbeddedResource>
    </ItemGroup>

    <ItemGroup>
      <Compile Update="MTPZ.Designer.cs">
        <DesignTime>True</DesignTime>
        <AutoGen>True</AutoGen>
        <DependentUpon>MTPZ.resx</DependentUpon>
      </Compile>
    </ItemGroup>
</Project>
